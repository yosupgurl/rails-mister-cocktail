<div class="text-center">
  <h1>These are your cocktails</h1>
<div class="container">
    <div class="row">
        <% @cocktails.each do |cocktail| %>
            <div class="col-xs-12 col-sm-2 col-md-4">
                <%= link_to cocktail_path(cocktail), class: "card-link" do %>
                    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(https://www.flairprojectsb.com/wp-content/uploads/2017/05/smoked-pina-colada.jpg);">
                      <div class="card-description">
                        <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
                      </div>
                  </div>
              <% end %>
      </div>
    <% end %>
    </div>
        <h2><%= link_to( "Add Cocktail", new_cocktail_path , html_options = {class: "button btn btn-success"}) %></h2>
  </div>
</div>
